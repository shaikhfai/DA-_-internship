SELECT title, price
FROM books
WHERE genre = 'Sci-Fi';


SELECT title, author_last_name, release_year
FROM books
WHERE release_year < 1950;


SELECT title, genre, price
FROM books
WHERE genre = 'Classic' OR price > 20.00;


SELECT title, stock_count
FROM books
WHERE genre = 'Thriller' AND stock_count < 15;


SELECT title, author_last_name
FROM books
WHERE author_last_name LIKE 'H%';





SELECT title, price
FROM books
ORDER BY price DESC;


SELECT title, author_last_name
FROM books
ORDER BY author_last_name ASC;


SELECT title, release_year
FROM books
ORDER BY release_year ASC, title ASC;



SELECT title, price
FROM books
ORDER BY price DESC
LIMIT 3;


SELECT title
FROM books
LIMIT 5 OFFSET 5; 


UPDATE books
SET price = price * 1.1
WHERE genre = 'Classic';


SELECT title, price FROM books WHERE genre = 'Classic';

DELETE FROM books
WHERE release_year < 1900;



SELECT title, release_year FROM books; 




SELECT COUNT(*) AS total_sci_fi_books
FROM books
WHERE genre = 'Sci-Fi';

SELECT
    MAX(price) AS max_price,
    MIN(price) AS min_price,
    AVG(price) AS average_price
FROM books;



