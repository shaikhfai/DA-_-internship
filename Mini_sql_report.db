SELECT * FROM BOOKS;

CREATE DATABASE bookstore;
USE bookstore;

CREATE TABLE books (
    book_id INT PRIMARY KEY AUTO_INCREMENT, -- Unique identifier for each book
    title VARCHAR(255) NOT NULL,            -- Name of the book (cannot be empty)
    author_last_name VARCHAR(100) NOT NULL, -- Author's last name for easy sorting
    release_year INT,                       -- Year the book was published
    genre VARCHAR(50),                      -- Category of the book
    price DECIMAL(5, 2) NOT NULL,           -- Retail price (e.g., 29.99)
    stock_count INT DEFAULT 0               -- How many copies are on hand
);


